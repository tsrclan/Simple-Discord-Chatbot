# Discord
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
# Optional: set to register commands only in one guild during testing
DISCORD_GUILD_ID=

# OpenAI-compatible API
OPENAI_API_KEY=
# Use either OPENAI_BASE_URL or OPENAI_API_URL (full endpoint).
OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_API_URL=https://api.openrouter.ai/v1/chat/completions
OPENAI_MODEL=gpt-4o-mini
# Optional auth header overrides (useful for non-standard gateways).
# OPENAI_AUTH_HEADER=Authorization
# OPENAI_AUTH_PREFIX=Bearer
# Optional extra headers as JSON.
# OPENAI_EXTRA_HEADERS={"HTTP-Referer":"https://example.com","X-Title":"My Discord Bot"}

# Request tuning
REQUEST_TIMEOUT_MS=90000
MAX_HISTORY_MESSAGES=30
MAX_HISTORY_CHARS=12000

# Auto-ban configuration (comma-separated channel IDs)
AUTO_BAN_CHANNEL_IDS=1458316803217424427
AUTO_BAN_DELETE_MESSAGE_SECONDS=86400
